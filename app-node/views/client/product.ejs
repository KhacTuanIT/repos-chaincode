<script>
    $(document).ready(function () {
        const loadProduct = () => {
            $.ajax({
                url: '/api/products',
                type: 'get',
                data: {
                    org: 'supply'
                },
                success: function (res) {
                    if (res?.products) {
                        let gridContent = '';
                        let listContent = '';
                        let { products } = res;
                        console.log(products);
                        let product = undefined;
                        products.forEach(prod => {
                            product = prod.Value;
                            console.log(product.primaryImage);
                            gridContent += '<div class="col-lg-4 col-md-4 col-sm-6 mt-40"><div class="single-product-wrap"><div class="product-image">' +
                                '<a href="/product-details/' + product.code + '">';
                            if (product.primaryImage === '' || product.primaryImage === "none") {
                                gridContent += '<img src="/assets/images/product/large-size/1.jpg" />'
                            }
                            else {
                                gridContent += '<img src="/assets/images/product/' + product.primaryImage + '" />';
                            }
                            gridContent += '</a>' +
                                '</div><div class="product_desc">' +
                                '<div class="product_desc_info"><div class="product-review"><h5 class="manufacturer">' +
                                '<a href="/product-details/' + product.code + '">' + product.manufactororId +
                                '</a></h5></div><h4><a class="product_name" href="/product-details/' + product.code + '">' +
                                product.name + '</a></h4>' +
                                '<div class="price-box"><span class="new-price">$' + product.price + '</span></div></div>' +
                                '<div class="add-actions"><ul class="add-actions-link"><li class="add-cart active">' +
                                '<a href="/product-details/' + product.code + '"> Add to cart </a></li>' +
                                '<li><a title="quick view" class="quick-view-btn" href="#" data-toggle="modal" data-target="#exampleModalCenter">' +
                                '<i class="fa fa-eye"></i></a></li></ul></div></div></div></div>'
                        });
                        $('#product-grid').empty();
                        $('#product-grid').append(gridContent);
                    }
                    else {
                        $('#product-grid').empty();
                        $('#product-grid').append('<div class="col-lg-12 col-md-12 col-sm-12 mt-40 d-flex justify-content-center">Not found any products</div>');
                    }
                },
                error: function (r, h, e) {
                    console.log(e);
                    $('#product-grid').empty();
                    $('#product-grid').append('<div class="col-lg-12 col-md-12 col-sm-12 mt-40 d-flex justify-content-center">Not found any products</div>');
                }
            });
        }

        let pathname = window.location.pathname;
        if (pathname.includes('products')) {
            loadProduct();
        }
    });
</script>