<!--Shopping Cart Area Strat-->
<div class="Shopping-cart-area pt-60 pb-60">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <form action="#">
          <div class="table-content table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th class="li-product-remove">remove</th>
                  <th class="li-product-thumbnail">images</th>
                  <th class="cart-product-name">Product</th>
                  <th class="li-product-price">Unit Price</th>
                  <th class="li-product-quantity">Quantity</th>
                  <th class="li-product-subtotal">Total</th>
                </tr>
              </thead>
              <tbody id="cart-body"></tbody>
            </table>
          </div>
          <div class="row">
            <div class="col-12">
              <div class="coupon-all">
                <!-- <div class="coupon">
                                    <input id="coupon_code" class="input-text" name="coupon_code" value=""
                                        placeholder="Coupon code" type="text">
                                    <input class="button" name="apply_coupon" value="Apply coupon" type="submit">
                                </div>
                                <div class="coupon2">
                                    <input class="button" name="update_cart" value="Update cart" type="submit">
                                </div> -->
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-5 ml-auto">
              <div class="cart-page-total">
                <h2>Cart totals</h2>
                <ul>
                  <li>
                    Subtotal <span id="cart-subtotal-checkout">$0.00</span>
                  </li>
                  <li>Total <span id="cart-total-checkout">$0.00</span></li>
                </ul>
                <a href="#">Proceed to checkout</a>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<!--Shopping Cart Area End-->

<script>
  const loadCartItems = async () => {
    $.ajax({
      url: "/api/get-cart-items",
      type: "get",
      success: function (res) {
        if (res.status) {
          let { cart } = res;
          if (cart.products) {
            let { products, totalPrice, totalItems } = cart;
            let contentCartTotal =
              "$" +
              totalPrice +
              ' <span class="cart-item-count">' +
              totalItems +
              "</span>";
            document.getElementById("cart-total-price").innerHTML =
              contentCartTotal;
            document.getElementById("cart-sub-total").innerText =
              "$" + totalPrice;

            let contentCartItems = "";
            products.forEach((product) => {
              contentCartItems +=
                "<li>" +
                "<a" +
                ' href="/product-detail/' +
                product.item.code +
                '"' +
                ' class="minicart-product-image"' +
                ">" +
                "<img" +
                ' src="/images/' +
                product.item.primaryImage +
                '"' +
                ' alt="cart products"' +
                "/>" +
                "</a>" +
                '<div class="minicart-product-details">' +
                "<h6>" +
                '<a href="/product-detail/' +
                product.item.code +
                '"' +
                ">" +
                product.item.name +
                "</a" +
                ">" +
                "</h6>" +
                "<span>" +
                product.price +
                " x " +
                product.quantity +
                "</span>" +
                "</div>" +
                '<button class="close remove-cart-item" data-key="' +
                product.item.code +
                '" title="Remove">' +
                '<i class="fa fa-close"></i>' +
                "</button>" +
                "</li>";
            });
            document.getElementById("cart-content-items").innerHTML =
              contentCartItems;
          } else {
            let { totalPrice, totalItems } = cart;
            let contentCartTotal =
              "$" +
              totalPrice +
              ' <span class="cart-item-count">' +
              totalItems +
              "</span>";
            document.getElementById("cart-total-price").innerHTML =
              contentCartTotal;
            document.getElementById("cart-sub-total").innerText =
              "$" + totalPrice;
            document.getElementById("cart-content-items").innerHTML =
              "Cart empty!";
          }
        }
      },
      error: function (jq, status, err) {
        console.log(jq);
        let responseError = JSON.parse(jq.responseText);
        toastr.error(responseError.toString());
      },
    });
  };
  const getCartItems = () => {
    $(document).ready(function () {
      $.ajax({
        url: "/api/get-cart-items",
        type: "get",
        success: function (res) {
          if (res.status) {
            let { cart } = res;
            if (cart.products) {
              let { products, totalPrice, totalItems } = cart;
              if (products.length > 0) {
                let contentBody = "";
                products.forEach((product) => {
                  contentBody +=
                    "<tr>" +
                    '<td class="li-product-remove remove-cart-item-body" data-key="' +
                    product.item.code +
                    '"><i class="fa fa-times"></i></a>' +
                    "</td>" +
                    '<td class="li-product-thumbnail">' +
                    '<a href="/product-details/' +
                    product.item.code +
                    '"' +
                    "><img style='width: 120px;'" +
                    ' src="/images/' +
                    product.item.primaryImage +
                    '"' +
                    ' alt="' +
                    product.item.name +
                    '"' +
                    "/></a>" +
                    "</td>" +
                    '<td class="li-product-name">' +
                    '<a href="/product-details/' +
                    product.item.code +
                    '">' +
                    product.item.name +
                    "</a>" +
                    "</td>" +
                    '<td class="li-product-price">' +
                    '<span class="amount">$' +
                    product.item.price +
                    "</span>" +
                    "</td>" +
                    '<td class="quantity">' +
                    "<label>Quantity</label>" +
                    '<div class="cart-plus-minus">' +
                    "<input" +
                    ' class="cart-plus-minus-box"' +
                    ' value="' +
                    product.quantity +
                    '"' +
                    ' readonly="readonly"' +
                    ' type="text"' +
                    "/>" +
                    '<div class="dec qtybutton cart-change-item-amount" data-type="minus" data-key="' +
                    product.item.code +
                    '">' +
                    '<i class="fa fa-angle-down"></i>' +
                    "</div>" +
                    '<div class="inc qtybutton cart-change-item-amount" data-type="plus" data-key="' +
                    product.item.code +
                    '">' +
                    '<i class="fa fa-angle-up"></i>' +
                    "</div>" +
                    "</div>" +
                    "</td>" +
                    '<td class="product-subtotal">' +
                    '<span class="amount">$' +
                    product.price +
                    "</span>" +
                    "</td>" +
                    "</tr>";
                });
                document.getElementById("cart-body").innerHTML = contentBody;
                document.getElementById("cart-subtotal-checkout").innerText =
                  "$" + totalPrice;
                document.getElementById("cart-total-checkout").innerText =
                  "$" + totalPrice;
              } else {
                document.getElementById("cart-body").innerHTML =
                  '<tr><td colspan="6">Not found any items in cart</td></tr>';
                document.getElementById("cart-subtotal-checkout").innerText =
                  "$0.00";
                document.getElementById("cart-total-checkout").innerText =
                  "$0.00";
              }
            } else {
              document.getElementById("cart-body").innerHTML =
                '<tr><td colspan="6">Not found any items in cart</td></tr>';
              document.getElementById("cart-subtotal-checkout").innerText =
                "$0.00";
              document.getElementById("cart-total-checkout").innerText =
                "$0.00";
            }
            loadCartItems();
          }
        },
      });
    });
  };

  $(document).on("click", ".remove-cart-item-body", function () {
    let key = this.getAttribute("data-key");
    $.ajax({
      url: `/api/remove-cart-item/${key}`,
      type: "post",
      success: function (res) {
        if (res.status) {
          toastr.success(res.message);
          loadCartItems();
          getCartItems();
        } else {
          toastr.error(res.message);
        }
      },
      error: function (jq, status, err) {
        console.log(jq);
        let responseError = JSON.parse(jq.responseText);
        toastr.error(responseError.toString());
      },
    });
  });

  $(document).on("click", ".cart-change-item-amount", function () {
    let type = this.getAttribute("data-type");
    let key = this.getAttribute("data-key");
    if (type === "minus") {
      $.ajax({
        url: `/api/minus-cart-item/${key}`,
        type: "post",
        success: function (res) {
          if (res.status) {
            getCartItems();
          } else {
            toastr.warn(
              res.message ? res.message : "Server is updating now..."
            );
          }
        },
        error: function (jq, status, err) {
          console.log(jq);
          let responseError = JSON.parse(jq.responseText);
          toastr.error(responseError.toString());
        },
      });
    } else if (type === "plus") {
      $.ajax({
        url: `/api/add-cart-item/${key}`,
        type: "post",
        success: function (res) {
          if (res.status) {
            getCartItems();
          } else {
            toastr.warn(
              res.message ? res.message : "Server is updating now..."
            );
          }
        },
        error: function (jq, status, err) {
          console.log(jq);
          let responseError = JSON.parse(jq.responseText);
          toastr.error(responseError.toString());
        },
      });
    }
  });

  getCartItems();
</script>
