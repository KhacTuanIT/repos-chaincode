<script>
    $(document).ready(function () {
        const loadProduct = () => {
            $.ajax({
                url: '/api/product-types',
                type: 'get',
                data: {
                    org: 'supply'
                },
                success: function (res) {
                    if (res?.productTypes) {
                        let gridContent = '';
                        let listContent = '';
                        let { productTypes } = res;
                        console.log(productTypes);
                        let product = undefined;
                        productTypes.forEach(prod => {
                            productType = prod.Value;
                            gridContent += '<tr><th class="budget">';
                            gridContent += productType.productTypeId;
                            gridContent += '</th><th class="budget">';
                            gridContent += productType.name;
                            gridContent += '</th><td class="text-right"><div class="dropdown"><a class="btn btn-sm btn-icon-only text-light" href="#" role="button"' +
                                            'data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">' +
                                            '<i class="fas fa-ellipsis-v"></i>' +
                                        '</a>' +
                                        '<div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">' +
                                            '<a class="dropdown-item" href="#">Detail</a>' +
                                            '<a class="dropdown-item" href="#">Edit</a>' +
                                            '<a class="dropdown-item" href="#">Delete</a>' +
                                        '</div>' +
                                    '</div>' +
                                '</td>' +
                            '</tr>';
                        });
                        $('#admin-product-list').empty();
                        $('#admin-product-list').append(gridContent);
                    }
                    else {
                        $('#admin-product-list').empty();
                        $('#admin-product-list').append('<div class="col-lg-12 col-md-12 col-sm-12 mt-40 d-flex justify-content-center">Not found any product types</div>');
                    }
                },
                error: function (r, h, e) {
                    console.log(e);
                    $('#admin-product-list').empty();
                    $('#admin-product-list').append('<div class="col-lg-12 col-md-12 col-sm-12 mt-40 d-flex justify-content-center">Not found any product types</div>');
                }
            });
        }

        let pathname = window.location.pathname;
        if (pathname.includes('admin/product-types')) {
            loadProduct();
        }
    });
</script>