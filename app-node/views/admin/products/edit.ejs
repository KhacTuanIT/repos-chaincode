<div class="container-fluid mt--6">
  <div class="row">
    <div class="col-xl-12 order-xl-1">
      <div class="card">
        <div class="card-header">
          <div class="row align-items-center">
            <div class="col-8">
              <h3 class="mb-0">Edit Product</h3>
            </div>
            <div class="col-4 text-right">
              <button
                type="submit"
                id="btn-form-edit"
                class="btn btn-sm btn-primary"
              >
                Save
              </button>
            </div>
          </div>
        </div>
        <div class="card-body">
          <form id="form-edit">
            <h6 class="heading-small text-muted mb-4">Product information</h6>
            <div class="pl-lg-4">
              <div class="row">
                <div class="col-lg-6">
                  <div class="form-group">
                    <label class="form-control-label" for="code"
                      >Product Code</label
                    >
                    <input
                      type="text"
                      id="code"
                      name="code"
                      class="form-control"
                      readonly
                      placeholder="Product Code"
                      value="<%= product.code %>"
                    />
                    <span id="invalid-code" class="invalid-text-value"></span>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="form-group">
                    <label class="form-control-label" for="name"
                      >Product Name</label
                    >
                    <input
                      type="text"
                      id="name"
                      name="name"
                      class="form-control"
                      value="<%= product.name %>"
                      placeholder="Product Name"
                    />
                    <span id="invalid-name" class="invalid-text-value"></span>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-6">
                  <div class="form-group">
                    <label class="form-control-label" for="manufactororId"
                      >Manufacturer</label
                    >
                    <select
                      name="manufactororId"
                      id="manufactororId"
                      class="form-control"
                    >
                      <option>--- Choose Manufacturer ---</option>
                    </select>
                    <span
                      id="invalid-manufactororId"
                      class="invalid-text-value"
                    ></span>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="form-group">
                    <label class="form-control-label" for="color">Color</label>
                    <input
                      type="text"
                      id="color"
                      name="color"
                      class="form-control"
                      value="<%= product.color %>"
                      placeholder="Color"
                    />
                    <span id="invalid-color" class="invalid-text-value"></span>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-6">
                  <div class="form-group">
                    <label class="form-control-label" for="cpu">CPU</label>
                    <input
                      type="text"
                      id="cpu"
                      name="cpu"
                      class="form-control"
                      placeholder="CPU"
                      value="<%= product.cpu %>"
                    />
                    <span id="invalid-cpu" class="invalid-text-value"></span>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="form-group">
                    <label class="form-control-label" for="ram">RAM</label>
                    <input
                      type="text"
                      id="ram"
                      name="ram"
                      class="form-control"
                      value="<%= product.ram %>"
                      placeholder="RAM"
                    />
                    <span id="invalid-ram" class="invalid-text-value"></span>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-6">
                  <div class="form-group">
                    <label class="form-control-label" for="screen"
                      >Screen</label
                    >
                    <input
                      type="text"
                      id="screen"
                      name="screen"
                      class="form-control"
                      placeholder="Screen"
                      value="<%= product.screen %>"
                    />
                    <span id="invalid-screen" class="invalid-text-value"></span>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="form-group">
                    <label class="form-control-label" for="keyboard"
                      >Keyboard</label
                    >
                    <input
                      type="text"
                      id="keyboard"
                      name="keyboard"
                      class="form-control"
                      value="<%= product.keyboard %>"
                      placeholder="Keyboard"
                    />
                    <span
                      id="invalid-keyboard"
                      class="invalid-text-value"
                    ></span>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-6">
                  <div class="form-group">
                    <label class="form-control-label" for="storage"
                      >Storage</label
                    >
                    <input
                      type="text"
                      id="storage"
                      name="storage"
                      class="form-control"
                      placeholder="Storage"
                      value="<%= product.storage %>"
                    />
                    <span
                      id="invalid-storage"
                      class="invalid-text-value"
                    ></span>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="form-group">
                    <label class="form-control-label" for="network"
                      >Network</label
                    >
                    <input
                      type="text"
                      id="network"
                      name="network"
                      class="form-control"
                      value="<%= product.network %>"
                      placeholder="Network"
                    />
                    <span
                      id="invalid-network"
                      class="invalid-text-value"
                    ></span>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-6">
                  <div class="form-group">
                    <label class="form-control-label" for="usb">USB</label>
                    <input
                      type="text"
                      id="usb"
                      name="usb"
                      class="form-control"
                      placeholder="USB"
                      value="<%= product.usb %>"
                    />
                    <span id="invalid-usb" class="invalid-text-value"></span>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="form-group">
                    <label class="form-control-label" for="origin"
                      >Origin</label
                    >
                    <input
                      type="text"
                      id="origin"
                      name="origin"
                      class="form-control"
                      value="<%= product.origin %>"
                      placeholder="Origin"
                    />
                    <span id="invalid-origin" class="invalid-text-value"></span>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-6">
                  <div class="form-group">
                    <label class="form-control-label" for="yearOrigin"
                      >Year Origin</label
                    >
                    <input
                      type="text"
                      id="yearOrigin"
                      name="yearOrigin"
                      class="form-control"
                      placeholder="Year Origin"
                      value="<%= product.yearOrigin %>"
                    />
                    <span
                      id="invalid-yearOrigin"
                      class="invalid-text-value"
                    ></span>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="form-group">
                    <label class="form-control-label" for="type">Type</label>
                    <select name="type" id="type" class="form-control">
                      <option>--- Choose Product Type ---</option>
                    </select>
                    <span id="invalid-type" class="invalid-text-value"></span>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-6">
                  <div class="form-group">
                    <label class="form-control-label" for="vga">VGA</label>
                    <input
                      type="text"
                      id="vga"
                      name="vga"
                      class="form-control"
                      placeholder="VGA"
                      value="<%= product.vga %>"
                    />
                    <span id="invalid-vga" class="invalid-text-value"></span>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="form-group">
                    <label class="form-control-label" for="price">Price</label>
                    <input
                      type="number"
                      id="price"
                      name="price"
                      class="form-control"
                      value="<%= product.price %>"
                      placeholder="Price"
                    />
                    <span id="invalid-price" class="invalid-text-value"></span>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-12">
                  <div class="form-group">
                    <label class="form-control-label" for="owner">Owner</label>
                    <input
                      type="text"
                      id="owner"
                      name="owner"
                      class="form-control"
                      placeholder="Owner"
                      value="<%= product.owner %>"
                    />
                    <span id="invalid-owner" class="invalid-text-value"></span>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-12">
                  <div class="form-group">
                    <label class="form-control-label" for="description"
                      >Description</label
                    >
                    <textarea
                      class="form-control"
                      id="description"
                      name="description"
                      placeholder="Description"
                    >
<%= product.description %></textarea
                    >
                    <span
                      id="invalid-description"
                      class="invalid-text-value"
                    ></span>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-6">
                  <div class="form-group">
                    <label class="form-control-label" for="primaryImage"
                      >Primary Image</label
                    >
                    <input
                      type="file"
                      id="primaryImage"
                      name="primaryImage"
                      class="form-control"
                      placeholder="Primary Image"
                      value="<%= product.primaryImage %>"
                    />
                    <!-- <button
                      type="button"
                      class="btn btn-primary"
                      data-toggle="modal"
                      data-target="#exampleModalLong"
                    >
                      UploadImage
                    </button> -->
                    <span
                      id="invalid-primaryImage"
                      class="invalid-text-value"
                    ></span>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="form-group">
                    <label class="form-control-label" for="subImage"
                      >Sub Image</label
                    >
                    <input
                      type="file"
                      id="subImage"
                      name="subImage"
                      class="form-control"
                      value="<%= product.subImage %>"
                      placeholder="Sub Image"
                    />
                    <span
                      id="invalid-subImage"
                      class="invalid-text-value"
                    ></span>
                  </div>
                </div>
              </div>
            </div>
            <hr class="my-4" />
            <input
              type="hidden"
              name="tempPrimaryImage"
              id="tempPrimaryImage"
            />
            <input type="hidden" name="tempSubImage" id="tempSubImage" />
          </form>
        </div>
      </div>
    </div>
  </div>
  <!-- Footer -->
</div>

<script>
  function clearAfterDelay(e) {
    setTimeout(() => {
      e.text("");
    }, 5000);
  }

  function getFormData() {
    let data = new FormData();
    data.append(code, $("#code").val());
    data.append(name, $("#name").val());
    data.append(manufactororId, $("#manufactororId").val());
    data.append(color, $("#color").val());
    data.append(cpu, $("#cpu").val());
    data.append(ram, $("#ram").val());
    data.append(screen, $("#screen").val());
    data.append(keyboard, $("#keyboard").val());
    data.append(storage, $("#storage").val());
    data.append(network, $("#network").val());
    data.append(usb, $("#usb").val());
    data.append(origin, $("#origin").val());
    data.append(yearOrigin, $("#yearOrigin").val());
    data.append(type, $("#type").val());
    data.append(vga, $("#vga").val());
    data.append(owner, $("#owner").val());
    data.append(description, $("#description").val());
    data.append(primaryImage, $("#tempPrimaryImage").val());
    data.append(subImage, $("#tempSubImage").val());
    return data;
  }

  $(document).on("change", "#primaryImage", function (e) {
    let data = new FormData();
    data.append("primaryImage", $(this).prop("files")[0]);
    $.ajax({
      url: "/admin/upload",
      type: "post",
      data: data,
      processData: false,
      contentType: false,
      success: function (res) {
        console.log(res);
      },
      error: function (jq, status, error) {
        console.log(jq);
      },
    });
  });

$(document).on("change", "#subImage", function (e) {
  let data = new FormData();
  data.append("primaryImage", $(this).prop("files")[0]);
  $.ajax({
    url: "/admin/upload",
    type: "post",
    data: data,
    processData: false,
    contentType: false,
    success: function (res) {
      console.log(res);
    },
    error: function (jq, status, error) {
      console.log(jq);
    },
  });
});

  document
    .querySelector("#btn-form-edit")
    .addEventListener("click", function (e) {
      let data = getFormData();
      console.log(data);
      $.ajax({
        url: "/admin/products/edit",
        type: "post",
        contentType: false,
        processData: false,
        data: data,
        success: function (res) {
          console.log(res);
          toastr.info(res.message);
        },
        error: function (jq, status, err) {
          let responseError = JSON.parse(jq.responseText);
          console.log(responseError);
          responseError.errors.forEach((error) => {
            if (!$("#" + error.param).hasClass("invalid-error-input")) {
              $("#" + error.param).addClass("invalid-error-input");
              setTimeout(() => {
                if ($("#" + error.param).hasClass("invalid-error-input")) {
                  $("#" + error.param).removeClass("invalid-error-input");
                }
              }, 5000);
            }
            $("#invalid-" + error.param).text(error.msg);
            clearAfterDelay($("#invalid-" + error.param));
          });
        },
      });
    });
</script>
