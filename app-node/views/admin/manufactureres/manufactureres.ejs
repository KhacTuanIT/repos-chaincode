<script>
    document.querySelector('#btn-delete-modal').addEventListener('click', function(e) {
        let key = this.getAttribute('data-key');
        console.log(key);
        $.ajax({
            url: '/admin/manufactureres/delete',
            type: 'post',
            data: {
                manufactororId: key
            },
            success: function(res) {
                if (res.status) {
                    toastr.success(res.message);
                }
                else {
                    toastr.error(res.message);
                }
            },
            error: function(jq, status, err) {
                let responseError = JSON.parse(jq.responseText);
                toastr.error(responseError.toString());
            }
        })
    });

    function addEventShowupModal() {
        document.querySelectorAll('.showup-delete-modal').forEach(ele => {
            ele.addEventListener('click', function(){
                let name = ele.getAttribute('data-name');
                let key = ele.getAttribute('data-key');
                console.log(key);
                document.getElementById('item-modal-name').innerText = name;
                document.getElementById('btn-delete-modal').setAttribute('data-key', key);
            })
        })
    }

    $(document).ready(function () {
        const loadProduct = () => {
            $.ajax({
                url: '/api/manufactureres',
                type: 'get',
                data: {
                    org: 'supply'
                },
                success: function (res) {
                    if (res?.manufactureres) {
                        let gridContent = '';
                        let listContent = '';
                        let { manufactureres } = res;
                        console.log(manufactureres);
                        let manufacturer = undefined;
                        manufactureres.forEach(prod => {
                            manufacturer = prod.Value;
                            gridContent += '<tr><th scope="row budget">';
                            gridContent += manufacturer.manufactororId;
                            gridContent += '</th><th class="budget">';
                            gridContent += manufacturer.name;
                            gridContent += '</th><td class="text-right"><div class="dropdown"><a class="btn btn-sm btn-icon-only text-light" href="#" role="button"' +
                                            'data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">' +
                                            '<i class="fas fa-ellipsis-v"></i>' +
                                        '</a>' +
                                        '<div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">' +
                                            '<a class="dropdown-item" href="/admin/manufactureres/' + manufacturer.manufactororId + '">Detail</a>' +
                                            '<a class="dropdown-item" href="/admin/manufactureres/edit/' + manufacturer.manufactororId + '">Edit</a>' +
                                            '<a class="dropdown-item showup-delete-modal" data-name="' + manufacturer.name + '" data-key="' + manufacturer.manufactororId + '" data-toggle="modal" data-target="#exampleModalCenter">Delete</a>' +
                                        '</div>' +
                                    '</div>' +
                                '</td>' +
                            '</tr>';
                        });
                        $('#admin-product-list').empty();
                        $('#admin-product-list').append(gridContent);
                    }
                    else {
                        $('#admin-product-list').empty();
                        $('#admin-product-list').append('<div class="col-lg-12 col-md-12 col-sm-12 mt-40 d-flex justify-content-center">Not found any manufactureres</div>');
                    }
                    addEventShowupModal();
                },
                error: function (r, h, e) {
                    console.log(e);
                    $('#admin-product-list').empty();
                    $('#admin-product-list').append('<div class="col-lg-12 col-md-12 col-sm-12 mt-40 d-flex justify-content-center">Not found any manufactureres</div>');
                }
            });
        }

        let pathname = window.location.pathname;
        if (pathname.includes('admin/manufactureres')) {
            loadProduct();
        }
    });
</script>